{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
{% if not app.user or 'ROLE_ADMIN' not in app.user.roles %}
        <div class="alert alert-danger" role="alert">
            Vous n'avez pas les droits d'accéder à cette page.
        </div>
{% else %}
    <div class="MinWidthGeneral">
    <div class="userEditH4">
        <h4>Please register! ✅</h4>
    </div>
        <div class="userForm">
    {{ form_start(form, {'attr': {'class': 'form'}}) }}

    <div class="form-group">
        {{ form_label(form.firstname, 'Firstname:', {'label_attr': {'class': 'text_divType1f'}}) }}
        {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Your firstname...'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.lastname, 'Lastname:', {'label_attr': {'class': 'text_divType1f'}}) }}
        {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Your lastname...'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.phone, 'Phone:', {'label_attr': {'class': 'text_divType1f'}}) }}
        {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Your phone...'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email, 'Email:', {'label_attr': {'class': 'text_divType1f'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your email...'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.password, 'Password:', {'label_attr': {'class': 'text_divType1f'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Your password...'}}) }}
    </div>

    <div class="btnUser">
        
        <button class="btn btn-custom" type="submit">Màj</button>
    </div>

    {{ form_end(form) }}
</div>


    </div>
{% endif %}
 {% include 'footer.html.twig' %}
{% endblock %}
