{% if not app.user or 'ROLE_ADMIN' not in app.user.roles %}
    <div class="alert alert-danger" role="alert">
        Vous n'avez pas les droits d'accéder à cette page.
    </div>
{% else %}
<form method="post" action="{{ path('app_permis_delete', {'id': permis.id}) }}" onsubmit="return confirmDelete('Are you sure you want to delete this permis?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ permis.id) }}">
    <button class="btn" type="submit">Delete</button>
</form>
{% endif %}
