{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="MinWidthGeneral " >
        <div class="generalHome " >
           <div class="generalHomeH4 " >
              <h4 >Nos Services</h4>
           </div>
            {% for home in permis %}
            <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                      <div class="col-md-8">
                        <img src="{{ asset('images/' ~ home.image) }}" class="img-fluid rounded-start" alt="...">
                      </div>
                      <div class="col-md-4">
                        <div class="card-body text-center">
                          <h5 class="card-title"> {{ home.type | default('') | upper }}</h5>
                         
                          <h4 class="card-text">€{{ home.price }}</h4>
                          <a class="btn lienHome" href="{% if app.user is null %}{{ path('app_user') }}{% elseif 'ROLE_ELEVE' in app.user.roles or 'ROLE_MONITEUR' in app.user.roles %}{{ path('app_creneaux_index') }}{% else %}{{ path('app_permis') }}{% endif %}">choisir</a>
                        <a class="btn lienHome" href="{{ path('app_detail', {'id': home.id}) }}">détail</a>
                        </div>
                      </div>
                    </div>
            </div>
            {% endfor %}
        </div>
    </div>
     {% include 'footer.html.twig' %}

{% endblock %}
